<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="" />
  <title>Product example Â· Bootstrap</title>

  <link rel="stylesheet" href="/css/main.css" />
  <script src="/js/main.js"></script>
</head>

<body>
  <main id="main">
    <section class="d-flex align-items-center">
      <div class="container">
        <div class="table-wrapper">
          <div class="table-title">
            <div class="row">
              <div class="col-sm-6">
                <h2>Twitch self-bot</h2>
              </div>
              <div class="col-sm-6">
                <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal">
                  <i class="bi bi-plus-lg" style="font-size: 1rem; vertical-align: middle"></i>
                  <span style="vertical-align: middle">Add New Channel</span>
                </a>
              </div>
            </div>
          </div>
          <table id="table" class="table table-striped table-hover">
            <thead>
              <tr>
                <th scope="col">Channel id (<%= channels.length %>)</th>
                <th scope="col">Command count</th>
                <th scope="col">Regex count</th>
                <th scope="col">Status</th>
                <th scope="col">Spam Status</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% channels.forEach( function( channel ){ %>
              <tr>
                <th scope="row"><%= channel.channel_id %></th>
                <td><%= channel.regexs.length %></td>
                <td><%= channel.commands.length %></td>
                <td>
                  <% if (channel.enable==true){%>
                  <i class="bi bi-check-circle text-success"></i>
                  <%}else{ %>
                  <i class="bi bi-x-circle text-danger"></i>
                  <% } %>
                </td>
                <td>
                  <% if (channel.spam.enable==true){%>
                  <i class="bi bi-check-circle text-success"></i>
                  <%}else{ %>
                  <i class="bi bi-x-circle text-danger"></i>
                  <% } %>
                </td>
                <td>
                  <a class="btn" href="#" role="button"><i class="bi bi-pencil-fill text-primary"></i></a>
                  <a class="btn" href="#" role="button" data-bs-toggle="modal" data-bs-target="#comfrimModal" data-id="<%= channel.id %>"><i class="bi bi-trash text-danger"></i></a>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </main>
  <!-- Modal -->
  <div class="modal fade" id="comfrimModal" tabindex="-1" aria-labelledby="comfrimModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-confirm">
      <div class="modal-content">
        <div class="modal-header flex-column">
          <div class="icon-box">
            <i class="bi bi-x bi-lg"></i>
          </div>
          <h4 class="modal-title">Are you sure?</h4>
          <button type="button" class="close" data-bs-dismiss="modal" aria-hidden="true">
            &times;
          </button>
        </div>
        <div class="modal-body">
          <p>
            Do you really want to delete these channel?<br />This process
            cannot be undone.
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-info" data-bs-dismiss="modal">
            Cancel
          </button>
          <form id="deleteForm" method="DELETE">
            <input type="text" id="id" value="" hidden />
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>

</html>
